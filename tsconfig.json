{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "doc",
        "install",
        "res",
        "script",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "module": "commonjs",
        "target": "es6",
        "outDir": "build",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    }
}